<form class="col s12 container" id="change-password-form">
  <p class="user-alert"></p>
  <div class="row">
    <div class="input-field col s12">
      <input type="password" id="old-password" class="validate" name="passwords[old]" placeholder="Old Password">
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <input type="password" id="new-pasword" class="validate" name="passwords[new]" placeholder="New Password">
    </div>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i></button>
    <button class="btn waves-effect waves-light cancel-btn" name="action">Cancel
      <i class="material-icons right">cancel</i>
    </button>
</form>
