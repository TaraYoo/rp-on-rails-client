{{#each locations as |location| }}

  <div class="col s12 m4">
    <div class="card blue-grey darken-1 location">
      <div class="card-content white-text">
        <span class="card-title">{{location.name}}</span>
        <p>{{location.plot}}</p>
        <p>Visited?: {{location.visited}}</p>
        <p>Current Player Location: {{location.has_players}}</p>
      </div>
      <div class="card-action">
        <form class="location-status">
          <button class="btn delete-btn" id="delete-{{location.id}}">Delete Location</button>
          <button class="btn update-btn" id="update-{{location.id}}">Update Location</button>
          <label>
            <input type="checkbox"
            class="{{#if location.visited}}filled-in{{else}}{{/if}}">
            <span>Visited?</span>
          </label>
          <label>
            <input type="checkbox"
            class="{{#if location.has_players}}filled-in{{else}}{{/if}}">
            <span>Current party location</span>
          </label>
        </form>
      </div>
    </div>
  </div>

{{/each}}
