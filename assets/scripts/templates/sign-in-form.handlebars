<form class="col s12" id="sign-in-form">
  <div class="row">
    <div class="input-field col s12">
      <input type="email" id="sign-in-email" class="validate" name="credentials[email]" placeholder="Email">
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <input type="password" id="sign-in-password" class="validate" name="credentials[password]" placeholder="Pasword">
    </div>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">Sign In
  <i class="material-icons right">send</i></button>
</form>
